<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vetapp.controller.ProfileController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Профиль" textFill="#0a1c40">
      <font>
         <Font name="Montserrat Medium" size="12.0" />
      </font></Label>
    <Label fx:id="usernameLabel" styleClass="label-normal" />
    <Label fx:id="fullNameLabel" styleClass="label-normal" />
    <Label fx:id="phoneLabel" styleClass="label-normal" />
    <Label fx:id="addressLabel" styleClass="label-normal" />
    <Label fx:id="statusLabel" styleClass="label-normal" />
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" text="Мои записи" textFill="#0a1c40">
      <font>
         <Font name="Montserrat Medium" size="12.0" />
      </font></Label>
    <ScrollPane fitToWidth="true">
        <VBox fx:id="appointmentsContainer" spacing="10" style="-fx-padding: 10;" />
    </ScrollPane>
</VBox>
