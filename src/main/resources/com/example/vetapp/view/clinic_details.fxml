<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vetapp.controller.ClinicDetailsController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <Label fx:id="nameLabel" styleClass="label-bold" />
    <Label fx:id="addressLabel" styleClass="label-normal" />
    <Label fx:id="districtLabel" styleClass="label-normal" />
    <Label fx:id="ratingLabel" styleClass="label-normal" />
    <Label fx:id="servicesLabel" styleClass="label-normal" wrapText="true" />
    <VBox fx:id="specialistsContainer" spacing="5" />
    <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: linear-gradient(to right, #0A1C40, #516691);" styleClass="book-button" text="Назад">
      <font>
         <Font name="Montserrat Regular" size="12.0" />
      </font></Button>
    <Button fx:id="bookButton" onAction="#handleBookAppointment" style="-fx-background-color: linear-gradient(to right, #0A1C40, #516691);" styleClass="book-button" text="Записаться">
      <font>
         <Font name="Montserrat Regular" size="12.0" />
      </font></Button>
</VBox>
