<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="846.0" prefWidth="1560.0" spacing="15" style="-fx-padding: 50; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vetapp.controller.AppointmentFormController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <Label fx:id="clinicNameLabel" styleClass="label-medium" text="Clinic Name" textFill="#615ca2">
        <font>
            <Font name="Poppins Medium" size="24.0" />
        </font>
    </Label>
    <Label styleClass="label-medium" text="Appointment form" textFill="#2e255d">
        <font>
            <Font name="Poppins Medium" size="16.0" />
        </font>
    </Label>
    <Label text="Pet's Name:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <TextField fx:id="petNameField" prefHeight="38.0" prefWidth="830.0" promptText="   Enter the pet's name" style="-fx-background-radius: 20; -fx-background-color: #F4F7FC; -fx-max-width: 250;" />
    <Label text="Pet type:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <TextField fx:id="petTypeField" prefHeight="40.0" prefWidth="287.0" promptText="   For example, a dog" style="-fx-background-radius: 20; -fx-background-color: #F4F7FC; -fx-max-width: 250;" />
    <Label text="Reason for visit:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <TextField fx:id="reasonField" prefHeight="40.0" prefWidth="287.0" promptText="   Describe the reason" style="-fx-background-radius: 20; -fx-background-color: #F4F7FC; -fx-max-width: 250;" />
    <Label text="Specialist:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <ComboBox fx:id="specialistComboBox" onAction="#handleSpecialistSelection" prefHeight="35.0" prefWidth="200.0" promptText="   Choose a specialist" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #5DC983;" />
    <Label text="Date:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <ComboBox fx:id="dateComboBox" onAction="#handleDateSelection" prefHeight="35.0" prefWidth="200.0" promptText="   Select a date" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #5DC983;" />
    <Label text="Time:" textFill="#2e255d">
        <font>
            <Font name="Poppins Regular" size="14.0" />
        </font></Label>
    <ComboBox fx:id="timeComboBox" prefHeight="35.0" prefWidth="200.0" promptText="   Select time" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #5DC983;" />
    <Button onAction="#handleSubmit" prefHeight="38.0" prefWidth="131.0" style="-fx-background-radius: 25; -fx-background-color: #604AD0; -fx-text-fill: #ffffff;" styleClass="book-button" text="Confirm" textFill="WHITE">
        <font>
            <Font name="Montserrat SemiBold" size="12.0" />
        </font>
    </Button>
    <Button onAction="#handleCancel" prefHeight="38.0" prefWidth="115.0" style="-fx-background-radius: 25; -fx-background-color: #F4F7FC; -fx-text-fill: #2E255D;" styleClass="book-button" text="Cancel" textFill="#2e255d">
        <font>
            <Font name="Montserrat SemiBold" size="12.0" />
        </font>
    </Button>
</VBox>
