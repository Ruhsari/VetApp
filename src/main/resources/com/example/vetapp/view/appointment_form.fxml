<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="388.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vetapp.controller.AppointmentFormController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <Label styleClass="label-bold" text="Запись на приём" textFill="#0a1c40">
      <font>
         <Font name="Montserrat Regular" size="12.0" />
      </font></Label>
    <Label styleClass="label-normal" text="Имя питомца:" />
    <TextField fx:id="petNameField" prefHeight="35.0" prefWidth="348.0" promptText="Введите имя питомца" style="-fx-background-radius: 20; -fx-background-color: #FFFFFF;" />
    <Label styleClass="label-normal" text="Тип питомца:" />
    <TextField fx:id="petTypeField" prefHeight="36.0" prefWidth="348.0" promptText="Например, собака" style="-fx-background-radius: 20; -fx-background-color: #FFFFFF;" />
    <Label styleClass="label-normal" text="Причина обращения:" />
    <TextField fx:id="reasonField" prefHeight="35.0" prefWidth="348.0" promptText="Опишите причину" style="-fx-background-radius: 20; -fx-background-color: #FFFFFF;" />
    <Label styleClass="label-normal" text="Специалист:" />
    <ComboBox fx:id="specialistComboBox" onAction="#handleSpecialistSelection" prefHeight="35.0" prefWidth="168.0" promptText="Выберите специалиста" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #C5D9FF;" />
    <Label styleClass="label-normal" text="Дата:" />
    <ComboBox fx:id="dateComboBox" onAction="#handleDateSelection" prefHeight="35.0" promptText="Выберите дату" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #C5D9FF;" />
    <Label styleClass="label-normal" text="Время:" />
    <ComboBox fx:id="timeComboBox" prefHeight="35.0" promptText="Выберите время" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #C5D9FF;" />
    <Button onAction="#handleSubmit" prefHeight="38.0" prefWidth="116.0" style="-fx-background-color: linear-gradient(to right, #0A1C40, #516691);" styleClass="book-button" text="Подтвердить" />
    <Button onAction="#handleCancel" prefHeight="38.0" prefWidth="85.0" style="-fx-background-color: linear-gradient(to right, #0A1C40, #516691);" styleClass="book-button" text="Отмена" />
</VBox>
