<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vetapp.controller.RescheduleAppointmentController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <Label text="Перенос записи" styleClass="label-bold" />
    <Label fx:id="petNameLabel" styleClass="label-normal" />
    <Label fx:id="petTypeLabel" styleClass="label-normal" />
    <Label fx:id="specialistLabel" styleClass="label-normal" />
    <Label fx:id="reasonLabel" styleClass="label-normal" />
    <Label text="Новая дата:" styleClass="label-normal" />
    <ComboBox fx:id="dateComboBox" promptText="Выберите дату" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #C5D9FF;" onAction="#handleDateSelection" />
    <Label text="Новое время:" styleClass="label-normal" />
    <ComboBox fx:id="timeComboBox" promptText="Выберите время" style="-fx-pref-width: 200px; -fx-background-radius: 20; -fx-background-color: #C5D9FF;" />
    <Button onAction="#handleSubmit" styleClass="book-button" text="Подтвердить" />
    <Button onAction="#handleCancel" styleClass="book-button" text="Отмена" />
</VBox>